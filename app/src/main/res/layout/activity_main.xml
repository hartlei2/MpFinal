<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="328dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp">

            <EditText
                android:id="@+id/textToTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="67dp" />

            <Button
                android:id="@+id/translateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="translateText"
                android:text="Translate"
                tools:layout_editor_absoluteX="275dp"
                tools:layout_editor_absoluteY="64dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/translatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal|center_vertical"
                android:padding="3dp"
                android:text="Translated text will appear here"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="118dp"
                android:layout_height="92dp"
                android:onClick="playBeeps"
                android:text="Beeps"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="454dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button6"
                android:layout_width="118dp"
                android:layout_height="92dp"
                android:text="Duck Quacks"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="227dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:layout_width="118dp"
                android:layout_height="92dp"
                android:text="Dog Woofs"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="341dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>